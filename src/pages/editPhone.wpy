<template>
<form bindsubmit="formSubmit">
  <view class="title">修改手机号</view>
  
  <view class="section">
    <view class="err" wx:if="{{phoneErr}}">手机号格式错误，请重新输入</view>
   <text class="label">手机号</text>
    <input type="number"
    placeholder="请填写新手机号" value="{{phone}}"
    placeholder-class="placeholderc"
    name="phone"
    @input="changePhone" maxlength="11"/>
    <view class="close" wx:if="{{phone!==''}}" @tap="clearPhone"></view>
  </view>

  <view class="section">
    <view class="err" wx:if="{{cordErr}}">验证码错误，请重新输入或重新获取</view>
    <text class="label">验证码</text>
    <input type="number"
      placeholder="请填写验证码"
      maxlength="6"
      value="{{cord}}"
      @input="changeCord"
      name="cord"
      placeholder-class="placeholderc"/>
    <view class="count-down" wx:if="{{beginCountDown}}">{{countDown}}s 后重新获取</view>
    <button class="get-code" wx:if="{{!beginCountDown}}" disabled="{{disabledCord}}" @tap="getCord"> 获取验证码 </button>
  </view>
  <view class="btn-area">
    <button formType="submit" class="submit" disabled="{{submitdisabled}}">确定</button>
  </view>
  
</form>
</template>

<script>
import wepy from 'wepy'
import testMixin from '../mixins/test'
import XHR from '../api/'
export default class Index extends wepy.page {
  config = {
    navigationBarTitleText: '修改手机号',
    navigationBarBackgroundColor: '#fff',
    navigationBarTextStyle: 'black'
  }

  components = {
  }

  mixins = [testMixin]

  data = {
    option: {},
    beginCountDown: false,
    countDown: 60,
    disabledCord: true,
    submitdisabled: true,
    phoneErr: false,
    phone: '',
    cord: '', // 输入的短信验证码
    cordErr: false,
    openId: '' // 用户id
  }

  computed = {}

  methods = {
    changePhone(e) {
      this.phone = e.detail.value.trim()
      if (this.phone.length > 10) {
        if (this.checkTel(this.phone)) {
          this.phoneErr = false
          this.disabledCord = false
        } else {
          this.phoneErr = true
        }
      } else {
        this.phoneErr = false
        this.disabledCord = true
      }
      this.checkSubmitStatus()
    },

    clearPhone() {
      this.phone = ''
    },
    // 获取验证码
    getCord() {
      // 获取验证码
      this.countDown = 60 // 重置倒计时数字
      this.countDownFn && clearInterval(this.countDownFn)
      this.beginCountDown = !this.beginCountDown
      this.countDownFn = setInterval(() => {
        if (this.countDown === 0) {
          clearInterval(this.countDownFn)
          this.countDown = 60
          this.beginCountDown = !this.beginCountDown
        }
        this.countDown--
        this.$apply()
      }, 1e3)
      this.getMessageCode()
    },
    // 输入获取到的验证码
    changeCord(e) {
      this.cord = e.detail.value.trim()
      this.checkSubmitStatus()
      this.cordErr = false
    }
  }
  // 请求获取验证码
  getMessageCode() {
    let json = {
      openId: this.$parent.globalData.openId,
      mobile: this.phone
    }
    XHR.getPhoneCode(json).then(res => {
      if (res.statusCode === 200) {
        let {result} = res.data
        if (!result) {
          this.showToast('发送成功')
        }
      }
    })
  }
  changeRealName(e) {
    this.realName = e.detail.value.trim()
    this.checkSubmitStatus()
  }
  //  判断提交状态
  checkSubmitStatus() {
    if (this.checkTel(this.phone) && !this.cordErr && this.realName !== '') {
      this.submitdisabled = false
    } else {
      this.submitdisabled = true
    }
  }
  // 提交
  formSubmit(e) {
    let json = {
      openId: this.$parent.globalData.openId,
      oldMobile: this.$parent.globalData.userInfo.mobile,
      verifiCode: this.cord,
      newMobile: this.phone
    }
    XHR.editPhone(json).then(res => {
      if (res.statusCode === 200) {
        let {result, msg} = res.data
        if (!result) {
          wepy.setStorageSync('phone', this.phone)
          this.$parent.globalData.userInfo.mobile = this.phone
          this.$apply()
          wx.navigateBack({
            delta: 1
          })
        } else {
          this.showToast(msg)
        }
      }
    })
  }
  events = {}
  onLoad() {
  }
}
</script>
